      <%= cell("decidim/announcement", { announcement: "Session will expire in X minutes", callout_class: "warning" }) %>
    </div>
  </div>

  <div class="row">
    <div class="columns large-6 medium-centered">
      <%= decidim_form_for(@form, url: only_verified_votes_path, html: { class: "form new_only_verified_vote" }) do |form| %>
        <div class="card">
          <div class="card__content">
            <%= render partial: "form", object: form %>
            <%= form.hidden_field :component_id %>
